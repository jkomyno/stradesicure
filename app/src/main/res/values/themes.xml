<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GuillotineTheme" parent="Theme.Guillotine" />

    <style name="Theme.Guillotine" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="IntroTheme" parent="Theme.Intro" />

    <style name="Theme.Intro" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.Splash" />

    <style name="Theme.Splash" parent="Theme.AppCompat">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>